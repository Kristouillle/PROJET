<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulaire nouveau mot de passe</title>
    <link rel="stylesheet" href="/stylesheets/formpsw.css" />
    <script src="/javascripts/scriptnewpsw.js"></script>
  </head>
  <body>
    <div>
      <h2>Formulaire de saisie d'un nouveau mot de passe</h2>
      <form id="passwordForm">
        <!-- Groupe de champs pour le nouveau mot de passe -->
        <div class="form-group">
          <label for="newPassword">Nouveau mot de passe :</label>
          <div class="input-container">
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              required
            />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility('newPassword')"
              >👁️</span
            >
          </div>
          <div id="newPasswordError" class="error"></div>
        </div>
        <!-- Groupe de champs pour la confirmation du mot de passe -->
        <div class="form-group">
          <label for="confirmPassword">Confirmer le mot de passe :</label>
          <div class="input-container">
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              required
            />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility('confirmPassword')"
              >👁️</span
            >
          </div>
          <div id="confirmPasswordError" class="error"></div>
        </div>
        <button type="submit">Soumettre</button>
      </form>
    </div>
  </body>
</html>
